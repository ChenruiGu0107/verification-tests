{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi",
        "labels": {
            "name": "iscsi"
        }
    },
    "spec": {
		"initContainers": [{
			"name": "init",
			"image": "quay.io/openshifttest/storage@sha256:a05b96d373be86f46e76817487027a7f5b8b5f87c0ac18a246b018df11529b40",
			"command": ["sh", "-c", "mkdir /mnt/iscsi/subpath; cp /hello /mnt/iscsi/subpath/hello"],
			"volumeMounts": [{
				"name": "iscsi",
				"mountPath": "/mnt/iscsi"
			}]
		}],
        "containers": [{
            "name": "iscsi",
            "image": "quay.io/openshifttest/storage@sha256:a05b96d373be86f46e76817487027a7f5b8b5f87c0ac18a246b018df11529b40",
            "imagePullPolicy": "IfNotPresent",
            "volumeMounts": [{
                "name": "iscsi",
                "mountPath": "/mnt/iscsi",
                "subPath": "subpath"
            }]
        }],
        "securityContext": {
            "runAsUser": 101010,
            "fsGroup": 123456,
            "seLinuxOptions": {
                "level": "s0:c13,c2"
            }
        },
        "volumes": [{
            "name": "iscsi",
            "persistentVolumeClaim": {
                "claimName": "pvc-iscsi"
            }
        }]
    }
}
