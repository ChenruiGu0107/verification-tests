{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi2luns",
        "labels": {
            "name": "iscsi"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "iscsi-rw",
                "image": "quay.io/openshifttest/storage@sha256:a05b96d373be86f46e76817487027a7f5b8b5f87c0ac18a246b018df11529b40",
                "imagePullPolicy": "IfNotPresent",
                "ports": [{
                    "containerPort": 6379
                }],
                "volumeMounts": [{
                    "mountPath": "/mnt/iscsi",
                    "name": "iscsi-rw",
                    "readOnly": false
                }]
            },
            {
                "name": "iscsi-ro",
                "image": "quay.io/openshifttest/storage@sha256:a05b96d373be86f46e76817487027a7f5b8b5f87c0ac18a246b018df11529b40",
		"command": [
                    "/bin/bash",
                    "-c",
                    "/usr/bin/sleep 3600"
                ],
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [{
                    "mountPath": "/mnt/iscsi",
                    "name": "iscsi-ro",
                    "readOnly": true
                }]
            }
        ],
        "volumes": [
            {
                "name": "iscsi-rw",
                "persistentVolumeClaim": {
                    "claimName": "iscsi-rw"
                 }
            },
            {
                 "name": "iscsi-ro",
                 "persistentVolumeClaim": {
                     "claimName": "iscsi-ro"
                 }
            }
        ]
    }
}
