#----check pod page-----
check_pod_list_page:
  action: goto_pods_page
  element:
    selector:
      xpath: //table[descendant::th[text()="Name"]]
check_pod_list_with_no_pod:
  action: check_pod_list_page
  element:
    selector:
      xpath: //em[contains(text(),'No pods to show')]
goto_one_pod_page:
  url: /console/project/<project_name>/browse/pods/<pod_name>
  elements:
  - selector:
      xpath: //div[@ng-if="pod"]
goto_pods_page:
  url: /console/project/<project_name>/browse/pods
goto_one_pod_environment_tab:
  action: goto_one_pod_page
  action: goto_environment_tab
check_pod_environment:
  action: goto_one_pod_environment_tab
  action: check_environment_tab
check_pod_in_pods_table:
  element:
    selector:
      xpath: //pods-table//tbody/tr[td[@data-title="Name" and a[text()="<pod_name>" and @href="project/<project_name>/browse/pods/<pod_name>"]] and td[@data-title="Status" and div/span[text()="<status>"]] and td[@data-title="Ready" and text()="<ready>"] and td[@data-title="Restarts" and text()="<restarts>"]]
