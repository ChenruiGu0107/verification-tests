[OSEv3:children]
masters
nodes
etcd

[OSEv3:vars]
<%='openshift_master_embedded_dns=False' if dns.start_with?("embedded")%>
ansible_ssh_user=root
deployment_type=<%=deployment_type%>
oreg_url=<%=image_pre%>

# Pre-release additional repo
openshift_additional_repos=[{'id': 'ose-devel', 'name': 'ose-devel', 'baseurl': '<%=puddle_repo%>', 'enabled': 1, 'gpgcheck': 0}]
openshift_use_openshift_sdn=true
os_sdn_network_plugin_name=<%=network_plugin%>
osm_default_subdomain=<%=app_domain%>
openshift_master_identity_providers=<%=identity_providers%>
osm_use_cockpit=true
osm_cockpit_plugins=['cockpit-kubernetes']

# host group for masters
[masters]
[etcd]
[nodes]
