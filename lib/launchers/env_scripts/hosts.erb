[OSEv3:children]
masters
nodes
etcd
lb

[OSEv3:vars]
<%='openshift_master_embedded_dns=False' if dns.start_with?("embedded")%>
ansible_ssh_user=root
deployment_type=<%=deployment_type%>
oreg_url=<%=image_pre%>
cli_docker_additional_registries=<%=image_pre.partition("/")[0]%>

openshift_hosted_registry_storage_kind=nfs
openshift_hosted_registry_storage_nfs_options='*(rw,root_squash,sync,no_wdelay)'
openshift_hosted_registry_storage_nfs_directory=/var/lib/exports
openshift_hosted_registry_storage_volume_name=regpv
openshift_hosted_registry_storage_access_modes=['ReadWriteMany']
openshift_hosted_registry_storage_volume_size=17G

# Pre-release additional repo
openshift_use_openshift_sdn=true
osm_default_subdomain=<%=app_domain%>
openshift_master_identity_providers=<%=identity_providers%>
<%=ose3_vars.join("\n")%>

# host group for masters
[lb]
<%=lb_host_lines.join("\n")%>
[masters]
<%=master_host_lines.join("\n")%>
[etcd]
<%=etcd_host_lines.join("\n")%>
[nodes]
<%=node_host_lines.join("\n")%>
[nfs]
<%=nfs_host_lines.join("\n")%>
